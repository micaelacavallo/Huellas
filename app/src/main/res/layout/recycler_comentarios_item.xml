<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="25dp"
    android:layout_marginRight="25dp"
    android:background="@color/icons"
    android:orientation="vertical">

    <View
        android:id="@+id/view_line"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@drawable/shadow_gradient_inverse" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView_foto_persona"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:src="@mipmap/placeholder" />

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView_nombre_persona"
                style="@style/condensed_bold_16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Micaela Cavallo" />

            <TextView
                android:id="@+id/textView_comentario"
                style="@style/condensed_normal_16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="sdkfksdfsdkfsdfsdfsdfsdfsdfsdfsdfsdfsdfsdfsdsdfsdfsdfsd" />

            <TextView
                android:id="@+id/textView_fecha"
                style="@style/condensed_normal_small_14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="15/45/5454"
                android:textColor="@color/divider" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>