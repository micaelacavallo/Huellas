<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical">

    <include layout="@layout/toolbar"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"

                android:src="@mipmap/ic_launcher"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:gravity="center"
                style="@style/condensed_bold_22"
                android:text="OcurriÃ³ un error inesperado. Vuelva a intentarlo"/>

            <Button
                android:id="@+id/button_restart"
                android:layout_width="match_parent"
                android:layout_marginTop="40dp"
                android:layout_height="45dp"
                style="@style/condensed_bold_18"
                android:textColor="@color/icons"
                android:text="@string/customactivityoncrash_error_activity_restart_app"
                android:background="@drawable/ripple_button_general"/>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>